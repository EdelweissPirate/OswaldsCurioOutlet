{
    "version": 2,
    "builds": [
        { "src": "backend/server.js", "use": "@vercel/node" },
        { "src": "frontend", "use": "@vercel/static-vite" }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "backend/server.js" },
        { "handle": "filesystem" },
        { "src": "/(.*)", "dest": "/frontend/$1" }
    ]
}